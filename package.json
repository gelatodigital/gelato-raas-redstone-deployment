{
  "name": "redstone-evm-examples",
  "version": "1.0.0",
  "main": "index.js",
  "author": "hatskier <suvorovalex1997@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn install && yarn compile && npx tsc",
    "clean": "yarn hardhat clean && rm -rf dist",
    "compile": "npx hardhat compile --force",
    "deploy": "npx hardhat deploy",
    "format": "prettier --write '*/**/*.*{js,sol,json,md,ts}'",
    "format:check": "prettier --check '*/**/*.*{js,sol,json,md,ts}'",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "postinstall": "yarn husky install",
    "test": "npx hardhat test",
    "test:file": "npx hardhat test --grep",
    "verify": "npx hardhat etherscan-verify"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomicfoundation/hardhat-verify": "1.1.1",
    "@nomiclabs/hardhat-ethers": "2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "4.9.2",
    "@redstone-finance/evm-connector": "^0.3.6",
    "@redstone-finance/oracles-monorepo": "https://github.com/redstone-finance/redstone-oracles-monorepo",
    "@redstone-finance/sdk": "^0.3.6",
    "@tsconfig/recommended": "1.0.2",
    "@typechain/ethers-v5": "10.2.1",
    "@typechain/hardhat": "6.1.6",
    "@types/chai": "4.3.5",
    "@types/mocha": "10.0.1",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "chai": "4.3.7",
    "dotenv": "16.3.1",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethers": "5.7.2",
    "hardhat": "2.16.0",
    "hardhat-deploy": "0.11.34",
    "husky": "8.0.3",
    "lint-staged": "13.1.2",
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "3.4.1",
    "solhint-plugin-prettier": "0.0.5",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.2.0",
    "typescript": "5.0.4"
  },
  "lint-staged": {
    "*.*{js,sol,json,md,ts,yml,yaml}": "prettier --write",
    "*.*{ts,js}": "eslint -c .eslintrc.json"
  }
}
